# ============================================================
# Data Copilot Lab - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# Application
# ------------------------------------------------------------
APP_NAME=Data Copilot Lab
APP_VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# API Configuration
# ------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=4

# Frontend Configuration
# ------------------------------------------------------------
STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Database
# ------------------------------------------------------------
# SQLite (for local development)
DATABASE_URL=sqlite:///./data/data_copilot.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/data_copilot_lab
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=data_copilot_lab
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# Redis (for caching and Celery)
# ------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# REDIS_URL=redis://:password@localhost:6379/0

# Celery (for background tasks)
# ------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# OpenAI API (for AI Assistant)
# ------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Alternative LLM (optional)
# ------------------------------------------------------------
# ANTHROPIC_API_KEY=your_anthropic_key
# COHERE_API_KEY=your_cohere_key
# HUGGINGFACE_API_KEY=your_hf_key

# File Storage
# ------------------------------------------------------------
STORAGE_TYPE=local  # local, s3, minio
UPLOAD_DIR=./data/raw
PROCESSED_DIR=./data/processed
MODELS_DIR=./data/models
REPORTS_DIR=./data/reports
MAX_UPLOAD_SIZE=100  # MB

# S3/MinIO (for cloud storage)
# ------------------------------------------------------------
# S3_BUCKET=data-copilot-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
# S3_ENDPOINT=  # For MinIO or compatible services

# Security & Authentication
# ------------------------------------------------------------
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
# ------------------------------------------------------------
CORS_ORIGINS=["http://localhost:8501","http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Email (for notifications - optional)
# ------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@datacopilot.com

# Monitoring & Logging
# ------------------------------------------------------------
# SENTRY_DSN=your_sentry_dsn
# ENABLE_METRICS=True

# ML Configuration
# ------------------------------------------------------------
ML_MODEL_TIMEOUT=300  # seconds
AUTOML_TIME_BUDGET=600  # seconds
MAX_TRAINING_SAMPLES=100000
RANDOM_STATE=42

# Data Processing Limits
# ------------------------------------------------------------
MAX_ROWS_PREVIEW=1000
MAX_COLUMNS=500
CHUNK_SIZE=10000  # for processing large files

# Feature Flags
# ------------------------------------------------------------
ENABLE_AI_ASSISTANT=True
ENABLE_AUTOML=True
ENABLE_DEEP_LEARNING=False
ENABLE_PROFILING=True
ENABLE_CACHING=True

# Development
# ------------------------------------------------------------
RELOAD_ON_CHANGE=True
SHOW_SQL_QUERIES=False

# Testing
# ------------------------------------------------------------
TEST_DATABASE_URL=sqlite:///./test.db
